// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// NextAuth.js Required Models
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String?   @unique
  emailVerified    DateTime?
  image            String?
  password         String?          // Hashed password for email/password auth
  isAdmin          Boolean   @default(false) // Admin flag
  stripeCustomerId String?   @unique // Stripe customer ID

  accounts      Account[]
  sessions      Session[]
  locations     Location[]
  subscriptions Subscription[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Subscription Model (Stripe)
// ============================================

model Subscription {
  id                   String   @id @default(cuid())
  userId               String
  locationId           String   @unique // One subscription per location
  stripeSubscriptionId String   @unique
  stripePriceId        String
  status               String   // 'trialing', 'active', 'canceled', 'past_due', etc.
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAtPeriodEnd    Boolean  @default(false)
  trialEnd             DateTime?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSubscriptionId])
}

// ============================================
// Google Business Profile Models
// ============================================

model Location {
  id                String   @id @default(cuid())
  userId            String
  googleAccountId   String   // GBP account ID (e.g., "123456789")
  googleAccountName String?  // GBP account display name
  locationId        String   // GBP location ID (e.g., "987654321")
  title             String   // Business name
  address           String?  // Formatted address
  phone             String?  // Primary phone
  website           String?  // Website URL
  mapsUri           String?  // Google Maps link
  averageRating     Float?   // Average star rating
  totalReviews      Int      @default(0)
  isActive          Boolean  @default(false) // Is this location subscribed/active?
  lastSyncedAt      DateTime? // Last time reviews were fetched
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews        Review[]
  subscription   Subscription?
  widgetSettings WidgetSettings?

  @@unique([userId, googleAccountId, locationId])
  @@index([userId])
  @@index([isActive])
}

model Review {
  id              String   @id @default(cuid())
  locationId      String   // References our Location model
  googleReviewId  String   // Google's review ID
  reviewerName    String?
  reviewerPhoto   String?
  isPublished     Boolean  @default(false) // Widget: is this review visible on the embed?
  publishedAt     DateTime? // Widget: when was it published?
  starRating      Int      // 1-5
  comment         String?  @db.Text
  reviewReply     String?  @db.Text
  replyTime       DateTime?
  googleCreatedAt DateTime // When review was posted on Google
  googleUpdatedAt DateTime // When review was last updated on Google
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@unique([locationId, googleReviewId])
  @@index([locationId])
  @@index([starRating])
  @@index([googleCreatedAt])
  @@index([isPublished])
}

// ============================================
// Widget Settings Model
// ============================================

model WidgetSettings {
  id          String  @id @default(cuid())
  locationId  String  @unique // One widget config per location
  layout      String  @default("carousel") // "carousel", "grid", "list"
  theme       String  @default("light")    // "light", "dark", "auto"
  accentColor String  @default("#4F46E5")  // Hex color
  maxReviews  Int     @default(10)
  minStars    Int     @default(4)           // Only show reviews with this rating or higher
  showDate    Boolean @default(true)
  showName    Boolean @default(true)
  showBadge   Boolean @default(true)        // "Powered by Local Review Responder"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
}
